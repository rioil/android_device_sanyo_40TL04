<device name="Android">
  <!-- All values are in mA except as noted -->
  <!-- This file is an example, the values are not accurate -->
  <item name="none">0</item>
  <item name="screen.on">256</item>
  <item name="screen.full">320</item>
  <item name="wifi.on">4.0</item>
  <item name="wifi.active">31.0</item>
  <item name="wifi.scan">6.5</item>
  <item name="dsp.audio">14.1</item>
  <item name="dsp.video">54.0</item>
      <!-- Different CPU speeds as reported in
       /sys/devices/system/cpu/cpu0/cpufreq/stats/time_in_state -->
  <array name="cpu.speeds">
      <value>400000</value>  <!-- 400 MHz -->
      <value>800000</value>  <!-- 800 MHz -->
      <value>1000000</value> <!--   1 GHz -->
  </array>
  <!-- Power consumption when CPU is idle -->
  <item name="cpu.idle">4.0</item>
  <item name="cpu.awake">54.6</item>
  <!-- Power consumption at different speeds -->
  <array name="cpu.active">
      <value>116</value> <!-- 400 MHz -->
      <value>138</value> <!-- 800 MHz -->
      <value>148</value> <!--   1 GHz -->
  </array>
  <!-- This is the battery capacity in mAh -->
  <item name="battery.capacity">2150</item>
      <!--
      Battery capacity is 2150 mAH (at 4.5 Volts)ここ重要。
      -->
</device>
